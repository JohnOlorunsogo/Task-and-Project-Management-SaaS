# =============================================================================
# Enterprise Task & Project Management SaaS - Environment Configuration
# =============================================================================

# ---- PostgreSQL ----
POSTGRES_USER=taskpm_user
POSTGRES_PASSWORD=taskpm_secret_dev
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# ---- Redis ----
REDIS_URL=redis://redis:6379/0

# ---- Kafka ----
KAFKA_BOOTSTRAP_SERVERS=kafka:9092

# ---- MinIO (S3-compatible) ----
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_ENDPOINT=minio:9000
MINIO_BUCKET=taskpm-files
MINIO_USE_SSL=false

# ---- JWT (RS256) ----
# Generate with: openssl genrsa -out private.pem 2048 && openssl rsa -in private.pem -pubout -out public.pem
JWT_PRIVATE_KEY_PATH=/app/keys/private.pem
JWT_PUBLIC_KEY_PATH=/app/keys/public.pem
JWT_ALGORITHM=RS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ---- Service URLs (internal) ----
AUTH_SERVICE_URL=http://auth_service:8001
ORG_SERVICE_URL=http://org_service:8002
PROJECT_SERVICE_URL=http://project_service:8003
TASK_SERVICE_URL=http://task_service:8004
NOTIFICATION_SERVICE_URL=http://notification_service:8005
FILE_SERVICE_URL=http://file_service:8006

# ---- Email (notifications) ----
SMTP_HOST=mailhog
SMTP_PORT=1025
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@taskpm.local

# ---- Rate Limiting ----
RATE_LIMIT_PER_MINUTE=60
